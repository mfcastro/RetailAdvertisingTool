@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>

<div class="row">
    <div class="col-md-12">
        <h3>@ViewBag.Message</h3>
    </div>

    <div>
        <div class="col-md-12">
            <form method="post">
                <label for="message">Message:</label>
                <textarea name="message" rows="6" class="form-control"></textarea>

                <input class="btn btn-primary margin-top-20" type="submit" value="Send"/>
            </form>
        </div>
    </div>
</div>